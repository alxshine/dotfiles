configuration {
  font: "Mononoki Nerd Font Mono Regular 10";

  drun {
    display-name: "ï€‚";
  }

  run {
    display-name: ">";
  }

  window {
    display-name: "w";
  }

  timeout {
    delay: 10;
    action: "kb-cancel";
  }
}

* {
  border: 0;
  margin: 0;
  padding: 0;
  spacing: 0;

  bg: #1a1b26;
  bg-alt: #232433;
  fg: #6a6f87;
  fg-alt: #a9b1d6;

  background-color: @bg;
  text-color: @fg;

  urgent-color: red;
  accent-color: #36a3d9;
}

window {
  transparency: "real";
  width: 700px;
}

mainbox {
  children: [inputbar, listview];
}

inputbar {
  background-color: @bg-alt;
  text-color: @fg-alt;
  children: [prompt, entry];
}

entry {
  background-color: inherit;
  text-color: @fg-alt;
  padding: 12px 3px;
}

prompt {
  background-color: inherit;
  padding: 12px;
}

listview {
  lines: 8;
}

element normal.normal {
    text-color: @fg;
    background-color: @bg;
}

element alternate.normal {
    text-color: @fg-alt;
    background-color: @bg-alt;
}

element normal urgent {
    text-color: @urgent-color;
}

element normal active {
    text-color: @accent-color;
}

element selected {
    text-color: @normal-background;
}

element selected normal, element selected active {
    text-color:   @accent-color;
}

element selected urgent {
    background-color:   @urgent-color;
}

element {
  background-color: inherit;
  children: [element-icon, element-text];
}

element-icon {
  padding: 10px 10px;
  size: 20px;
}

element-text {
  padding: 10px 0;
}

element-text selected {
  text-color: @fg-alt;
}
